                          ColumnDisplayIndexChanged="GlobalDataGrid_ColumnDisplayIndexChanged">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="هزینه" Binding="{Binding Path=name}" />
                        <DataGridTextColumn  Header="مبلغ"  Binding="{Binding Path=price}"/>
                  
                    
                    </DataGrid.Columns>
                </DataGrid>
                <Label HorizontalAlignment="Center" FontSize="20" FontFamily="B Mitra" FontWeight="Heavy" FontStretch="SemiCondensed" Margin="10" Name="lblcosts" Width="100" Height="30"></Label>
                <Button HorizontalAlignment="Center" FontSize="20" FontFamily="B Mitra" FontWeight="Heavy" FontStretch="SemiCondensed" Margin="10" Content="تایید" Name="btncosts" Width="100" Height="30" Background="LightGreen" Click="btncosts_Click"/>
            </StackPanel>
            <DataGrid Name="DtgFactors" MouseDoubleClick="DtgFactors_MouseDoubleClick" Grid.Row="1" Height="auto" Width="auto" Margin="5" IsReadOnly="True"  HorizontalAlignment="Stretch"  FlowDirection="RightToLeft"  CanUserAddRows="False" CanUserReorderColumns="False" Background="#FFEBCD" Visibility="Hidden" ></DataGrid>

